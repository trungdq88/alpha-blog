<%= render 'shared/model_error', obj: @article %>
<%= form_for @article, html: { class: 'form-group' } do |f| %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  </p>
  <p>
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
  </p>
  <p>
  <%= f.submit @article.new_record? ? 'Create' : 'Update',
    class: 'btn btn-primary btn-success' %>
  </p>
<% end %>

<%= link_to 'Show all articles', articles_path %>
