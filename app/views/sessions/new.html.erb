<div class="container">
  <h1 class="mt-5 text-center">Login</h1>

  <div class="row justify-content-md-center">
    <%= form_for :session, html: { class: 'form-group col col-6' },
      url: login_path do |f| %>
      <p>
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
      </p>
      <p>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      </p>
      <p>
      <%= f.submit 'Login', class: 'btn btn-primary btn-success' %>
    </p>
  <% end %>
  </div>
</div>
