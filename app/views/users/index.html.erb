<div class="container">
  <h1 class="mt-5">All users</h1>

  <table class="table table-border">
    <tr>
      <th></th>
      <th>Username</th>
      <th>Articles</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= gavatar_for user, size: 20 %></td>
        <td><%= link_to(user.username, user_path(user)) %></td>
        <td><%= pluralize(user.articles.length, 'article') %></td>
      </tr>
    <% end %>
  </table>
  <%= bootstrap_paginate @articles %>

</div>
